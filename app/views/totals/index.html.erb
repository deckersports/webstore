<% title "Totals" %>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Salesman</th>
      <th>Webstore</th>
      <th>Year</th>
      <th>Date</th>
      <th>School</th>
      <th>Sport</th>
      <th>Total</th>
    </tr>
  </thead>
  <tbody>
    <% for total in @totals %>
      <tr>
        <td><%= total.salesman.full_name %></td>
        <td><%= total.store.to_label %></td>
        <td><%= total.year.label %></td>
        <td><%= total.date %></td>
        <td><%= total.school %></td>
        <td><%= total.sport %></td>
        <td><%= total.total %></td>
        <td><%= link_to "Show", total %></td>
      </tr>
    <% end %>
  </tbody>
</table>

