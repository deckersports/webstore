<% title "Pages" %>

<table>
  <tr>
    <th>Name</th>
    <th>Permalink</th>
    <th>Content</th>
  </tr>
  <% for page in @pages %>
    <tr>
      <td><%= page.name %></td>
      <td><%= page.permalink %></td>
      <td><%= page.content %></td>
      <td><%= link_to "Show", page %></td>
    </tr>
  <% end %>
</table>

